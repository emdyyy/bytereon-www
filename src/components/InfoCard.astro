---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<div class="flex gap-5 lg:gap-20 items-stretch">
  <div class="relative flex items-center justify-center w-16">
    <svg class="w-16 h-16 block">
      <circle cx="30" cy="30" r="30" fill="#13C4A3"></circle>
    </svg>
    <svg class="w-2 h-full absolute block">
      <rect width="6" height="100%" fill="#13C4A3"></rect>
    </svg>
  </div>
  <div
    class="flex flex-col-reverse md:flex-row w-full gap-5 md:gap-12 lg:gap-20 py-16 lg:py-20"
  >
    <div class="flex flex-col gap-5 md:w-2/3 lg:w-1/2">
      <h3 class="font-poppins font-bold text-xl uppercase">{title}</h3>
      <p>{description}</p>
    </div>
    <div
      class="md:w-1/3 lg:w-1/2 w-36 flex items-start md:items-center md:justify-center"
    >
      <Image
        src={image}
        alt={title}
        class="max-w-42 md:max-w-56 object-contain h-full"
      />
    </div>
  </div>
</div>
