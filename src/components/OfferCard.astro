---
import { Image } from "astro:assets";
import ArrowIcon from "@assets/img/arrow.svg";

interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<div
  class="flex flex-col justify-between items-start px-8 py-12 md:px-12 md:py-14 bg-[#121212]"
>
  <div class="flex flex-col gap-4">
    <Image
      src={image}
      alt={title}
      loading="eager"
      class="h-32 self-start mb-10"
    />
    <h3 class="uppercase font-poppins font-bold text-xl">{title}</h3>
    <p>{description}</p>
  </div>
  <a href="#kontakt" class="uppercase hover:text-primary mt-8"
    ><div class="flex items-center gap-3">
      <p>Napisz do nas</p><Image src={ArrowIcon} alt="" class="h-3" />
    </div></a
  >
</div>
