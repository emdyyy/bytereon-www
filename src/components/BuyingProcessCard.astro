---
interface Props {
  index: number;
  title: string;
  description: string;
}

const { index, title, description } = Astro.props;
---

<div class="flex flex-col items-start gap-12">
  <p
    class="text-primary font-poppins font-bold text-5xl border-4 border-primary rounded-full flex h-24 w-24 items-center justify-center"
  >
    {index}
  </p>
  <div class="flex flex-col gap-5">
    <p class="font-poppins uppercase font-bold text-xl">{title}</p>
    <p>{description}</p>
  </div>
</div>
