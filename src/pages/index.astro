---
import Navbar from "@components/Navbar.astro";
import SEO from "@components/SEO.astro";
import Layout from "@layouts/RootLayout.astro";
import { Image } from "astro:assets";
import ArrowDownImage from "@assets/img/arrow-down.svg";
import HeroImage from "@assets/img/hero.svg";
import OfferCard from "@components/OfferCard.astro";
import WebsiteImage from "@assets/img/website.svg";
import EmailImage from "@assets/img/email.svg";
import BrandingImage from "@assets/img/branding.svg";
import InfoCard from "@components/InfoCard.astro";
import ProfessionalAppearanceImage from "@assets/img/professional-appearance.svg";
import StandOutImage from "@assets/img/stand-out.svg";
import MoreClientsImage from "@assets/img/more-clients.svg";
import SaveMoneyImage from "@assets/img/save-money.svg";
import ProjectImage from "@assets/img/project.svg";
import ServersImage from "@assets/img/servers.svg";
import CalculateImage from "@assets/img/calculate.svg";
import BuyingProcessCard from "@components/BuyingProcessCard.astro";
import FeedbackCard from "@components/FeedbackCard.astro";
import BarberBrothersLogo from "@assets/img/bb-logo.svg";
import JKMLogo from "@assets/img/jkm-logo.png";
import ContactForm from "@components/ContactForm.astro";
import Footer from "@components/Footer.astro";
import CookieBanner from "@components/CookieBanner.astro";
---

<Layout lang="pl">
  <SEO
    slot="seo"
    title="Dbamy o Twoją firmę w internecie - Bytereon"
    description="Budujemy strony i sklepy internetowe dla małych oraz średnich firm. Tworzymy logo, banery, ulotki, wizytówki i wiele więcej. Skontaktuj się."
    canonical="https://bytereon.com"
    openGraph={{
      title: "Dbamy o Twoją firmę w internecie - Bytereon",
      description:
        "Budujemy strony i sklepy internetowe dla małych oraz średnich firm. Tworzymy logo, banery, ulotki, wizytówki i wiele więcej. Skontaktuj się.",
      url: "https://bytereon.com",
      image: "https://bytereon.com/opengraph-image.png",
    }}
  />
  <CookieBanner slot="cookie-banner" />

  <header id="hero" class="full-height w-full max-w-screen-2xl mx-auto">
    <div class="flex flex-col w-full h-full max-w-screen-xl mx-auto px-5">
      <Navbar />
      <div
        class="flex flex-col-reverse md:flex-row h-full w-full justify-center gap-8 sm:gap-20"
      >
        <div
          class="flex flex-col gap-4 sm:gap-8 h-full w-full md:justify-center"
        >
          <h1
            class="font-poppins text-3xl md:text-4xl lg:text-5xl font-bold uppercase tracking-tight max-w-[600px]"
          >
            Zabłyśnij w oczach twoich klientów
          </h1>
          <p class="max-w-[480px]">
            Specjalizujemy się w tworzeniu nie tylko atrakcyjnych, ale i
            funkcjonalnych stron internetowych, oraz grafiki użytkowej, które
            zwiększają wiarygodność Twojej firmy, a także skutecznie wspierają
            proces pozyskiwania nowych klientów.
          </p>
          <div class="flex items-center gap-5">
            <Image
              src={ArrowDownImage}
              alt="Zejdź niżej, aby dowiedzieć się więcej"
              loading="eager"
              class="h-8 motion-safe:animate-bounce"
            />
            <p class="text-sm">Zejdź niżej, <br />aby dowiedzieć się więcej</p>
          </div>
        </div>
        <Image
          src={HeroImage}
          alt="Dbamy o Twoją firmę w internecie"
          loading="eager"
          class="w-36 md:w-72 lg:w-fit"
        />
      </div>
    </div>
  </header>
  <main>
    <section class="bg-lighter py-16 lg:py-24">
      <div class="max-w-screen-xl mx-auto px-5">
        <div class="flex flex-col gap-5 mb-12">
          <p class="uppercase text-primary text-sm">
            Razem podniesiemy poziom twojego biznesu
          </p>
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight md:w-2/3"
          >
            Co możemy dla ciebie zrobić?
          </h2>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-1">
          <OfferCard
            image={WebsiteImage}
            title="Strony i sklepy internetowe"
            description="Tworzymy strony oraz sklepy internetowe jako kluczowe narzędzie wzmacniające zasięg i widoczność Twojej firmy."
          />
          <OfferCard
            image={EmailImage}
            title="Firmowa skrzynka email"
            description="Oferujemy spersonalizowane emaile z własną domeną nie tylko dla Ciebie, ale także dla pracowników. Dodaj swojej firmie prestiżu oraz podkreśl jej profesjonalizm."
          />
          <OfferCard
            image={BrandingImage}
            title="logo, wizytówki, banery i wiele więcej"
            description="Tworzymy unikalny wizerunek Twojej marki, wzmacniając jej rozpoznawalność i budując trwałe relacje z klientami."
          />
        </div>
      </div>
    </section>
    <section class="py-16 lg:py-24">
      <div class="max-w-screen-xl mx-auto px-5">
        <div class="flex flex-col gap-5 mb-12">
          <p class="uppercase text-primary text-sm">
            Co zyskujesz dzięki naszej wpółpracy
          </p>
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight md:w-2/3 max-w-[700px]"
          >
            Wyróżnij się spośród konkurencji i zdobądź więcej potencjalnych
            klientów
          </h2>
        </div>
        <InfoCard
          title="profesjonalny wizerunek"
          description="Z nami zyskujesz profesjonalny wizerunek, który zwraca uwagę klientów. Nasze usługi pozwalają Twojej firmie prezentować się solidnie i wiarygodnie, co buduje zaufanie wśród Twoich klientów."
          image={ProfessionalAppearanceImage}
        />
        <InfoCard
          title="Większa rozpoznawalność"
          description="Współpraca z nami to klucz do zwiększenia rozpoznawalności Twojej marki. Działamy tak, aby Twoja firma była łatwo rozpoznawalna, co przyciąga uwagę potencjalnych klientów."
          image={StandOutImage}
        />
        <InfoCard
          title="Więcej Potencjalnych klientów"
          description="Dzięki profesjonalnemu wizerunkowi i większej rozpoznawalności,  zyskujesz przewagę w pozyskiwaniu nowych klientów. Solidna prezentacja przyciąga uwagę, sprawiając, że firma staje się atrakcyjniejsza dla potencjalnych klientów."
          image={MoreClientsImage}
        />
        <InfoCard
          title="Więcej czasu dla twojego biznesu"
          description="Dzięki naszemu wieloletniemu doświadczeniu i efektywnym procesom, gwarantujemy najwyższą jakość dostosowaną do Twoich potrzeb. Nie musisz samodzielnie poświęcać wielu godzin na naukę. Skorzystaj z naszej sprawdzonej ekspertyzy!"
          image={SaveMoneyImage}
        />
      </div>
    </section>
    <section class="bg-lighter py-16 lg:py-24">
      <div
        class="max-w-screen-xl mx-auto px-5 flex flex-col gap-12 md:gap-0 md:flex-row md:justify-between md:items-center"
      >
        <div class="w-full">
          <Image
            src={ProjectImage}
            alt="Unikalne rozwiązania oraz ultra szybka prędkość ładowania"
            loading="lazy"
            class="mx-auto w-64 md:w-72 lg:w-fit"
          />
        </div>
        <div class="flex flex-col gap-8 w-full">
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight"
          >
            Unikalne rozwiązania oraz ultra szybka prędkość ładowania
          </h2>
          <p>
            Każdą stronę tworzymy od podstaw, dopasowując ją do unikalnych cech
            Twojej firmy. Nie stosujemy gotowych szablonów z internetu. Ponadto,
            gwarantujemy ultra szybką prędkość ładowania dzięki topowym
            serwerom. Twoja strona ładuję się w mgnieniu oka, bez kompromisów.
          </p>
        </div>
      </div>
    </section>
    <section class="py-16 lg:py-24">
      <div
        class="max-w-screen-xl mx-auto px-5 flex flex-col gap-12 md:gap-0 md:flex-row md:justify-between md:items-center"
      >
        <div class="flex flex-col gap-8 w-full">
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight"
          >
            Pełne wsparcie techniczne
          </h2>
          <p>
            Zapewniamy pełne wsparcie techniczne, zajmując się obsługą strony od
            A do Z. Odpowiadamy za każdy aspekt, abyś Ty nie musiał tracić czasu
            na czytanie instrukcji technicznych. Dbałość o klienta to nasza
            priorytetowa zasada. Z nami otrzymasz gotowy rezultat, a my
            wytłumaczymy Ci wszystko co niezbędne, abyś mógł podejmować
            przemyślane decyzje biznesowe.
          </p>
        </div>
        <div class="w-full">
          <Image
            src={ServersImage}
            alt="Pełne wsparcie techniczne"
            loading="lazy"
            class="mx-auto w-64 md:w-72 lg:w-fit"
          />
        </div>
      </div>
    </section>
    <section class="bg-lighter py-16 lg:py-24">
      <div
        class="max-w-screen-xl mx-auto px-5 flex flex-col gap-12 md:gap-0 md:flex-row md:justify-between md:items-center"
      >
        <div class="w-full">
          <Image
            src={CalculateImage}
            alt="Koszty dopasowane do każdego projektu"
            loading="lazy"
            class="mx-auto w-64 md:w-72 lg:w-fit"
          />
        </div>
        <div class="flex flex-col gap-8 w-full">
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight"
          >
            Koszty dopasowane do każdego projektu
          </h2>
          <div class="flex flex-col gap-5">
            <p>
              Z uwagi na unikalność każdego projektu, cenę dostosowujemy
              indywidualnie. Jednak dla lepszego zrozumienia zakresu kosztów,
              najniższe stawki zaczynają się już od 1 000 zł, a przy
              rozbudowanej współpracy mogą sięgać dużo wyżej.
            </p>
            <p>
              Po zakończeniu projektu, klient ma możliwość utrzymania strony na
              naszych ultra-szybkich serwerach za niską opłatą miesięczną lub w
              dowolnie przez niego wybranym miejscu.
            </p>
          </div>
        </div>
      </div>
    </section>
    <section class="py-16 lg:py-24">
      <div class="max-w-screen-xl mx-auto px-5">
        <div class="flex flex-col gap-5 mb-12">
          <p class="uppercase text-primary text-sm">Jak rozpocząć współpracę</p>
          <h2
            class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight md:w-2/3 max-w-[700px]"
          >
            Tylko kilka prostych kroków, aby cieszyć się z naszych korzyści
          </h2>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-16 sm:gap-8 lg:gap-24">
          <BuyingProcessCard
            index={1}
            title="Wstępna konsultacja"
            description="Porozmawiamy o Twoich celach i wstępnie przeanalizujemy zakres współpracy."
          />
          <BuyingProcessCard
            index={2}
            title="Koncepcja działania"
            description="Na tym etapie dokładnie weryfikujemy wcześniej omówione cele i zbieramy niezbędne informacje."
          />
          <BuyingProcessCard
            index={3}
            title="Rozpoczęcie współpracy"
            description="Mając komplet materiałów, rozpoczynamy pracę."
          />
        </div>
      </div>
    </section>
    <section class="bg-lighter py-16 lg:py-24">
      <div class="flex flex-col gap-5 mb-12 max-w-screen-xl mx-auto px-5">
        <p class="uppercase text-primary text-sm">Poznaj nasze opinie</p>
        <h2
          class="font-bold font-poppins uppercase text-2xl md:text-3xl tracking-tight md:w-2/3"
        >
          Co mówią o nas nasi klienci?
        </h2>
      </div>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 gap-1 max-w-screen-xl mx-auto px-5"
      >
        <FeedbackCard
          content="“Działania Bytereon to prawdziwa rewolucja dla naszej firmy. Ich kompleksowe usługi, obejmujące tworzenie strony, hosting, skrzynki pocztowe i projektowanie grafiki dla naszego salonu, sprawiły, że wyróżniamy się spośród konkurencji. Dzięki ich zaangażowaniu osiągnęliśmy nasze cele marketingowe, zwiększając jednocześnie naszą widoczność w internecie.”"
          author={{
            logoImg: BarberBrothersLogo,
            name: "Kacper Grzybek",
            position: "Współwłaściciel",
            url: "https://barberbrothers.pl",
            website: "barberbrothers.pl",
          }}
        />
        <FeedbackCard
          content="“Dzięki Bytereon, moja niewielka firma zbudowała solidny wizerunek online. Ich profesjonalizm w tworzeniu strony internetowej, hostingu oraz dostarczaniu spersonalizowanej skrzynki pocztowej sprawił, że moja obecność w sieci stała się wyjątkowo skuteczna. Osiągnęłam zamierzone cele biznesowe, a wsparcie od Bytereon okazało się kluczowe dla tego sukcesu.”"
          author={{
            logoImg: JKMLogo,
            name: "Justyna Malinowska",
            position: "Włascicielka",
            url: "https://uroczystosc-marzen.pl",
            website: "uroczystosc-marzen.pl",
          }}
        />
      </div>
    </section>
    <section class="py-16 lg:py-24" id="kontakt">
      <div class="max-w-screen-xl mx-auto px-5">
        <ContactForm />
      </div>
    </section>
  </main>
  <Footer />
</Layout>
